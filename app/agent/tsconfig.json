{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "lib": ["es2015"]
}
